<h1>Listing tabs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tabs.each do |tab| %>
      <tr>
        <td><%= tab.name %></td>
        <td><%= number_to_currency(tab.balance) %>
        <td><%= link_to 'New Line Item', new_tab_line_item_path(tab) %>
        <td><%= link_to 'Show', tab %></td>
        <td><%= link_to 'Edit', edit_tab_path(tab) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

